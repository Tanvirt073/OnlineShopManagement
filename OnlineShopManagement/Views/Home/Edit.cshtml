@model ProductEditViewModel

@{
    ViewBag.Title = "Edit Product";
    var photoPath = "~/Images/" + (Model.ExistingPhotoPath ?? "default.jpg");
}


<form enctype="multipart/form-data" asp-controller="Home" asp-action="Edit"
method="post" class="mt-3">
      <input hidden asp-for="Id"/>
    <div class="form-group row">
        <label asp-for="ProductName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductName" class="form-control" placeholder="Name">
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ProductDescription" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductDescription" class="form-control" placeholder="Product Description">
            <span asp-validation-for="ProductDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ProductPrice" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductPrice" class="form-control" placeholder="Product Price">
            <span asp-validation-for="ProductPrice" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input multiple asp-for="Photo" class="form-control custom-file-input" id="imageInput" onchange="displayImage()">
            </div>
        </div>
    </div>

    <div class="form-group row col-sm-4 offset-4">
        <img asp-append-version="true" src="@photoPath" style="height:200px;width:auto" id="selectedImage" />
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
        
    </div>
</form>
