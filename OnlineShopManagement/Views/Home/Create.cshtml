@model ProductCreateViewModel

@{
    ViewBag.Title = "Create Product";
}

<form enctype="multipart/form-data" asp-controller="Home" asp-action="Create"
      method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="ProductName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductName" class="form-control" placeholder="Name">
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ProductDescription" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductDescription" class="form-control" placeholder="Product Description">
            <span asp-validation-for="ProductDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ProductPrice" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductPrice" class="form-control" placeholder="Product Price">
            <span asp-validation-for="ProductPrice" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input id="imageInput" multiple asp-for="Photo" class="form-control custom-file-input" onchange="displayImage()">
            </div>
        </div>
    </div>
    <div class="form-group row col-sm-4 offset-4">
    <img id="selectedImage" />
    </div>


    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>

