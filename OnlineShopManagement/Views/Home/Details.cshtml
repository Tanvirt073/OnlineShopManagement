@model Product 

@{
    var photoPath = "~/Images/" + (Model.PhotoPath ?? "default.jpg");
}


<div class="card-deck">
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@Model.ProductName</h3>
            </div>

            <img class="card-img-top imageThumbnail" src="@photoPath"
                 asp-append-version="true" />
            <h6> @Model.ProductDescription</h6>
            @if (Model.ProductPrice != null)
            {
                <h5> @Model.ProductPrice  Taka</h5>
            }

            <div class="card-footer text-center">
        
        <a asp-action="edit" asp-controller="home"
        asp-route-id="@Model.Id"
        class="btn btn-primary m-1">Edit</a>
            <form asp-action="Delete" asp-controller="Home" asp-route-id="@Model.Id" method="post" onclick="return confirm('Are you sure you want to delete @Model.ProductName')">
        <button type="submit" class="btn btn-danger m-1" >Delete</button>
            </form>
        </div>
        </div>
</div>
